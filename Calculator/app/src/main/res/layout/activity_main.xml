<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    >

    <EditText
        android:id="@+id/edittext"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="bottom|right"
        android:editable="false"
        android:textSize="30dp"
        android:hint="请输入"
        />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        >
        <Button
            android:id="@+id/AC"
            android:layout_width="80dp"
            android:layout_margin="5dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:text="AC"
            android:textSize="20dp"
            />
        <Button
            android:id="@+id/com"
            android:layout_width="80dp"
            android:layout_margin="5dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:text="~"
            android:textSize="20dp"
            />
        <Button
            android:id="@+id/sqrt"
            android:layout_width="80dp"
            android:layout_margin="5dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:text="√"
            android:textSize="20dp"
            />
        <Button
            android:id="@+id/div"
            android:layout_width="80dp"
            android:layout_margin="5dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:text="/"
            android:textSize="20dp"
            />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="80dp"

        >
        <Button
            android:id="@+id/seven"
            android:layout_width="80dp"
            android:layout_margin="5dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:text="7"
            android:textSize="20dp"
            />
        <Button
            android:id="@+id/eight"
            android:layout_width="80dp"
            android:layout_margin="5dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:text="8"
            android:textSize="20dp"
            />
        <Button
            android:id="@+id/nine"
            android:layout_width="80dp"
            android:layout_margin="5dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:text="9"
            android:textSize="20dp"
            />

        <Button
            android:id="@+id/multiple"
            android:layout_width="80dp"
            android:layout_margin="5dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:text="*"
            android:textSize="20dp"
            />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        >
        <Button
            android:id="@+id/four"
            android:layout_width="80dp"
            android:layout_margin="5dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:text="4"
            android:textSize="20dp"
            />
        <Button
            android:id="@+id/five"
            android:layout_width="80dp"
            android:layout_margin="5dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:text="5"
            android:textSize="20dp"
            />
        <Button
            android:id="@+id/six"
            android:layout_width="80dp"
            android:layout_margin="5dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:text="6"
            android:textSize="20dp"
            />
        <Button
            android:id="@+id/subtract"
            android:layout_width="80dp"
            android:layout_margin="5dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:text="-"
            android:textSize="20dp"
            />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        >
        <Button
            android:id="@+id/one"
            android:layout_width="80dp"
            android:layout_margin="5dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:text="1"
            android:textSize="20dp"
            />
        <Button
            android:id="@+id/two"
            android:layout_width="80dp"
            android:layout_margin="5dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:text="2"
            android:textSize="20dp"
            />
        <Button
            android:id="@+id/three"
            android:layout_width="80dp"
            android:layout_margin="5dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:text="3"
            android:textSize="20dp"
            />
        <Button
            android:id="@+id/add"
            android:layout_width="80dp"
            android:layout_margin="5dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:text="+"
            android:textSize="20dp"
            />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        >
        <Button
            android:id="@+id/zero"
            android:layout_width="170dp"
            android:layout_margin="5dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:text="0"
            android:textSize="20dp"
            />
        <Button
            android:id="@+id/decimal"
            android:layout_width="80dp"
            android:layout_margin="5dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:text="."
            android:textSize="20dp"
            />
        <Button
            android:id="@+id/equal"
            android:layout_width="80dp"
            android:layout_margin="5dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:text="="
            android:textSize="20dp"
            />
    </LinearLayout>
</LinearLayout>
